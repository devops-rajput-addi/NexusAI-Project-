{
  "name": "devops-mcp-hub",
  "version": "2.0.0",
  "description": "Unified DevOps MCP Hub - AI-powered integration for Jira, GitHub, and Confluence",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
